{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app(.*)$": "<rootDir>/../src/$1",
    "@common/db(.*)$": "<rootDir>../src/common/database/$1",
    "@config$": "<rootDir>/../src/config",
    "@dtos$": "<rootDir>/../src/dtos",
    "@interfaces$": "<rootDir>/../src/interfaces",
    "@exceptions$": "<rootDir>/../src/exceptions",
    "@constants$": "<rootDir>/../src/constants",
    "@decorators$": "<rootDir>/../src/decorators",
    "@entities$": "<rootDir>/../src/entities",
    "@modules$": "<rootDir>/../src/modules",
    "@controllers$": "<rootDir>/../src/controllers",
    "@repositories$": "<rootDir>/../src/repositories",
    "@repositories/prisma$": "<rootDir>/repositories/prisma",
    "@use-cases$": "<rootDir>/../src/use-cases"
  }
}
